<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center">Burgers!</h1>
    </div>
  </div>
</div>

<div class="container" class="text-center">
  <div class="row" class="text-center">
    <div class="col-md-4" class="text-center">      
      <span class="text-center">Burgers!!!</span>
    </div>
    <div class="col-md-4">
    </div>
    <div class="col-md-4" class="text-center">  
      <span class="text-center">Devoured Burgers!</span>
    </div>
  </div>
</div>


<div class="container alignLeft">
  <div class="row">
    <div class="col-md-4">  
      <ul>
        {{#each burgers}}
        {{#unless this.devoured}}
        <li>
          <span class="burger-name">{{this.id}}. {{this.burger_name}}
          <form action="burgers/update/{{this.id}}?_method=PUT" method="POST" class="eat-button">
          <input type="hidden" name="devoured" value="true">
          <button type="submit" class="btn" id="addButton">EAT ME!</button>
          </form>
          </span>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-4">
    <img class="picture img-responsive center-block" src="/assets/img/Burger.jpg" alt="Epic Burger" style="width:50%;height:50%;border:0;">
    </div>
    <div class="col-md-4">   
      <ul>
        {{#each burgers}}
        {{#if this.devoured}}
        <li>
          <span class="burger-name">{{this.id}}. {{this.burger_name}}</span>
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>


<div class="container" class="text-center">
  <div class="row" class="text-center">
    <div class="col-md-12" class="text-center">
      <span class="text-center">Add a Burger</span>
    </div>
  </div>
</div>


<div class="container" class="text-center">
  <div class="row" class="text-center">
    <div class="col-md-12" class="text-center"> 
      <form class="text-center" class="create-update-form" action="burgers/create" method="POST">
        <div class="form-group" class="text-center">
          <label for="burger" class="text-center">Burger Name:</label>
          <input type="text" id="burger" name="burger_name" class="text-center" id="addButton">
        </div>

        <button type="submit" class="btn" class="text-center" id="addButton">Add Burger</button>
        
        </form>
    </div>
  </div>
</div>